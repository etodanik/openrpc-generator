{% extends "layout.njk" %}
{% import "macros.njk" as macros %}

{% block main %}
#pragma once

{{ macros.printIncludes(includeMap) }}
#include "JsonRpcClient.h"
#include "{{ pluginName }}Client.generated.h"

{# For whatever strange reason, the dynamic delegate declarations don't work in a header file that has no struct, so we move those here #}
{% for method in methods %}
	{% if method.result.schema.type != 'object' %}
		DECLARE_DYNAMIC_DELEGATE_OneParam(F{{ method.name | pascalCase }}Callback, {{ macros.methodResponseType(method) }}, Response);
	{% endif %}
{% endfor %}

UCLASS(Blueprintable, BlueprintType)
class {{ apiTag }} U{{ pluginName }}Client : public UObject
{
	GENERATED_BODY()

public:
	U{{ pluginName }}Client();
	U{{ pluginName }}Client(UJsonRpcClient* InJsonRpcClient);

	UFUNCTION(BlueprintCallable, Category="RPC")
	void InitHttpTransport(FString Url);

    {% for method in methods %}
    UFUNCTION(BlueprintCallable, Category="RPC")
    void {{ method.name | pascalCase }}(const F{{ method.name | pascalCase }}RequestArgs& RequestArgs, const F{{ method.name | pascalCase }}Callback& OnResponse);
    {% endfor %}

private:
	UJsonRpcClient* JsonRpcClient;
};


{% endblock %}