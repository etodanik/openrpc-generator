#include "{{ prefixedPropertyName }}.generated.h"

USTRUCT(BlueprintType)
struct {{apiTag}} F{{ prefixedPropertyName }}
{
	GENERATED_BODY()

	{% for childPropertyName, childPropertySchema in propertySchema.properties %}
		UPROPERTY(EditAnywhere, BlueprintReadWrite)
		{{ [prefixedPropertyName] | unrealPropertyClassAttributeType(childPropertyName, childPropertySchema) | safe }} {{ childPropertyName }};
	{% endfor %}

	{% if propertySchema.required and propertySchema.required.length > 0 %}
