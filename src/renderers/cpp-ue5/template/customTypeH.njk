	F{{ prefixedPropertyName }}() {}
	{% endif %}

	F{{ prefixedPropertyName }}(
		{% for childPropertyName, childPropertySchema in propertySchema.properties %}{{ [prefixedPropertyName] | unrealPropertyMethodArgumentType(childPropertyName, childPropertySchema) | safe }} {{ childPropertyName }}In{% if not propertySchema.required or (propertySchema.required and childPropertyName not in propertySchema.required) %} = {{ [prefixedPropertyName] | unrealPropertyClassAttributeType(childPropertyName, childPropertySchema) | safe }}(){% endif %}{% if loop.last != true %},{% endif %}{% endfor %}
